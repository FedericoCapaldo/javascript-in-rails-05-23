<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Monuments</h1>

  <div id="monuments">
    <% @monuments.each do |monument| %>
      <%= render monument %>
      <p>
        <%= link_to "Show this monument", monument %>
      </p>
    <% end %>
  </div>

  <div data-controller="toggle">
    <button class="btn btn-primary" data-action="click->toggle#toggleNewMonumentForm">Add a new monument</button>

    <div class="mt-4 d-none" data-toggle-target="togglableElement">
      <%= render 'form', monument: @monument %>
    </div>
  </div>

</div>
